{
  "root": true,
  "env": {
    "browser": true
  },
  "extends": "standard",
  "plugins": [],
  "rules": {
    "camelcase":                   "off",
    "comma-dangle":                "off",
    "comma-spacing":               "off",
    "eqeqeq":                      "off",
    "indent":                      ["error", 2],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon":  true,
        "mode":        "minimum",
        "align":       "value"
      }
    ],
    "keyword-spacing":             "off",
    "no-multi-spaces":             "off",
    "no-multiple-empty-lines":     "off",
    "no-trailing-spaces":          "off",
    "no-unused-vars":              "warn",
    "padded-blocks":               "off",
    "quotes":                      ["error", "backtick"],
    "semi":                        ["error", "always"],
    "space-before-function-paren": "off",
    "space-in-parens":             "off"
  },
  "globals": {
    "_": true,
    "$": true,
    "angular": true,
    "authenticationProxy": true,
    "c": true,
    "corpusChooserInstance": true,
    "CQP": true,
    "CSV": true,
    "currentMode": true,
    "getAllCorporaInFolders": true,
    "initTimeGraph": true,
    "isLab": true,
    "korpApp": true,
    "kwicResults": true,
    "lemgramResults": true,
    "locationSearch": true,
    "model": true,
    "moment": true,
    "regescape": true,
    "Rickshaw": true,
    "safeApply": true,
    "settings": true,
    "Slick": true,
    "statisticsService": true,
    "statsResults": true,
    "timeProxy": true,
    "unregescape": true,
    "util": true,
    "view": true
  }
}
